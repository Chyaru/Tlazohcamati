<?xml version="1.0"?>
<gui>
  <!-- Layout of the main window -->
  <window>
    <!-- Size and position of the main window -->
    <rect x="100" y="100" width="1024" height="768"/>
    <!-- Maximized window -->
    <maximized>false</maximized>
  </window>

  <!-- The plugins that will be loaded -->
  <plugins>
    <!-- Displays simulation time, real time factor, etc. -->
    <plugin filename="GzScene3D" name="3D View" />

    <!-- World Control Panel: Start, Stop, Reset buttons, and simulation time -->
    <plugin filename="GzWorldControl" name="World Control" />

    <!-- Entity tree: Allows viewing and selecting entities in the world -->
    <plugin filename="GzEntityTree" name="Entity Tree" />

    <!-- Display of plotting metrics -->
    <plugin filename="GzPlot" name="Plot" />

    <!-- Render Engine plugin -->
    <plugin filename="GzRenderEngine" name="Render Engine" />

    <!-- Displays topic information (useful for debugging) -->
    <plugin filename="GzTopicViewer" name="Topic Viewer" />
  </plugins>
</gui>
